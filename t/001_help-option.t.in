#!/usr/bin/env perl
use strict;
use warnings;
use 5.010;
use English qw( -no_match_vars );

use Test::More;

use IPC::Run qw( run );
my $in = '';
my $out;
my $err;
my $cmd;

$cmd = [
    '@builddir@/t/../ldap-git-backup',
    '--help',
];
ok( run($cmd, \$in, \$out, \$err), 'option --help should be allowed' );
like( $out, qr{--help}, 'the --help option should be mentioned' );

done_testing();
